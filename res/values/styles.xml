<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@drawable/grey_background_pattern</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="listItemBackground">@drawable/grey_frame</item>
        <item name="baseBackground">@color/base_bg</item>
    </style>
    <style name="ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="backgroundStacked">@drawable/dark_background_pattern</item>
    </style>
    <style name="AppTheme.PageDetial">
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    <style name="TextHeader">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:maxLines">@integer/text_header_max_lines</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TextHeaderSub">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>
    <style name="HomePaneHeader">
       <item name="android:textSize">@dimen/text_size_medium</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
</resources>
